<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewFileActivity"
    >
    <com.google.android.material.appbar.AppBarLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.appcompat.widget.Toolbar
        android:id="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/back_button"
                android:src="@drawable/appbar_back_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>
            <ImageView
                android:id="@+id/Iedit"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
               android:src="@drawable/ic_baseline_edit_24"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/white" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TableLayout
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp">
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#009688"
            android:layout_marginRight="10dp"/>
        <TableRow >
            <TextView

                android:textSize="20dp"
                android:text="Name"
                android:gravity="start"
                android:layout_column="1"

                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:padding="4dp"/>
            <TextView android:textSize="20dp"
                android:gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:padding="4dp"
                android:text="Null"/>
        </TableRow>
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#009688"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TableRow >
            <TextView
                android:layout_column="1"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:padding="4dp"/>
            <TextView
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Null"
                android:padding="4dp"/>
        </TableRow>
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#009688"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TableRow >

            <TextView
                android:layout_column="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4dp"
                android:text="purchaseDate"
                android:textSize="20dp" />

            <TextView
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Null"
                android:padding="4dp"/>
        </TableRow>
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#009688"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TableRow >
            <TextView
                android:layout_column="1"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expire Date"
                android:padding="4dp"/>
            <TextView
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Null"
                android:padding="4dp"/>
        </TableRow>
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#009688"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TableRow >
            <TextView
                android:layout_column="1"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration in Month"
                android:padding="4dp"/>
            <TextView
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Null"
                android:padding="4dp"/>
        </TableRow>
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#009688"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TableRow >
            <TextView
                android:layout_column="1"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="details"
                android:padding="4dp"/>
            <TextView
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Null"
                android:padding="4dp"/>
        </TableRow>
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#009688"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

    </TableLayout>
        <View
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="1dp"
            android:layout_height="215dp"
            android:background="#009688"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="6dp"/>
        <View
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="1dp"
            android:layout_height="215dp"
            android:background="#009688"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp" />
        <View
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="1dp"
            android:layout_height="215dp"
            android:background="#009688"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/Image_card"
        app:cardElevation="-1dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="4dp"
        android:layout_margin="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbar" >
        <ImageView
            android:paddingBottom="2dp"
            android:id="@+id/Item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_image"/>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:visibility="gone"
        android:background = "@drawable/category_border"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/default_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Image_card"
        android:id="@+id/item_Image"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <TextView
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/show_property"
        android:id="@+id/Iname"
        android:text="Car"
        android:textSize="30dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_Image"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/linear_for_updatedate"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Iname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last updated On:- "
            android:textSize="10dp" />
        <TextView
            android:textSize="10dp"
            android:id="@+id/lastUpdateDate"
            android:text="20:09:1999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:background="#EEEEEE"
        android:showDividers="middle"
        android:elevation="2dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linear_for_updatedate"
        android:id="@+id/detailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="86dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="vertical">

            <TextView
                android:visibility="gone"
                android:textColor="@color/show_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between_two_line"
                android:text="Name"
                android:textSize="@dimen/input_text_size" />

            <TextView
                android:textColor="@color/show_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between_two_line"
                android:text="Category"
                android:textSize="@dimen/input_text_size" />

            <TextView
                android:textColor="@color/show_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between_two_line"
                android:text="purchase Date"
                android:textSize="@dimen/input_text_size" />

            <TextView
                android:id="@+id/expireDateLabel"
                android:textColor="@color/show_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between_two_line"
                android:text="Expire Date "
                android:textSize="@dimen/input_text_size" />

            <TextView
                android:textColor="@color/show_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between_two_line"
                android:text="Duration in Month"
                android:textSize="@dimen/input_text_size" />

            <TextView
                android:textColor="@color/show_property"
                android:id="@+id/detailLable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between_two_line"
                android:text="details "
                android:textSize="@dimen/input_text_size" />
            <TextView
                android:textColor="@color/show_property"
                android:id="@+id/daysLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between_two_line"
                android:text="Days Left "
                android:visibility="gone"
                android:textSize="@dimen/input_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_between_two_column"
            android:orientation="vertical"
            >

            <TextView
                android:visibility="gone"
                android:textColor="@color/show_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between_two_line"
                android:text=":"

                android:textSize="@dimen/input_text_size" />


            <TextView
                android:textColor="@color/show_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between_two_line"
                android:text=":"
                android:textSize="@dimen/input_text_size" />

            <TextView
                android:textColor="@color/show_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between_two_line"
                android:text=":"
                android:textSize="@dimen/input_text_size" />

            <TextView
                android:textColor="@color/show_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between_two_line"
                android:text=":"
                android:textSize="@dimen/input_text_size" />

            <TextView
                android:textColor="@color/show_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between_two_line"
                android:text=":"
                android:textSize="@dimen/input_text_size" />

            <TextView
                android:textColor="@color/show_property"
                android:id="@+id/detailseperator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between_two_line"
                android:text=":"
                android:textSize="@dimen/input_text_size" />
            <TextView
                android:textColor="@color/show_property"
                android:id="@+id/DaysLeftSeperator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between_two_line"
                android:text=":"
                android:visibility="gone"
                android:textSize="@dimen/input_text_size" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="@dimen/margin_between_two_column"
            android:orientation="vertical">

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between_two_line"
                android:text="heare is name"
                android:textSize="@dimen/input_text_size" />

            <TextView
                android:id="@+id/Icategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between_two_line"
                android:text="Category is name"
                android:textSize="@dimen/input_text_size" />

            <TextView
                android:id="@+id/purchasedate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between_two_line"
                android:text="purchase is name"
                android:textSize="@dimen/input_text_size" />

            <TextView
                android:id="@+id/expireDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between_two_line"
                android:text="Month is name"
                android:textSize="@dimen/input_text_size" />

            <TextView
                android:id="@+id/IMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between_two_line"
                android:text="Month is name"
                android:textSize="@dimen/input_text_size" />

            <TextView
                android:id="@+id/IDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between_two_line"
                android:text="Month is name"
                android:textSize="@dimen/input_text_size" />
            <TextView
                android:id="@+id/IDaysLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between_two_line"
                android:text="399 days Left"
                android:textSize="@dimen/input_text_size"
                android:visibility="gone"/>

        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detailLayout"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"/>
    <ImageView
        android:id="@+id/recieptButton"
        android:layout_marginTop="20dp"
        android:src="@drawable/receipt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Receipt"
        app:layout_constraintTop_toBottomOf="@id/recieptButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailLayout"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/ItemCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="@dimen/image_view_widh"
            android:layout_height="@dimen/image_view_height"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="10dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/category_border">
                <ImageView
                    android:padding="5dp"
                    android:id="@+id/IImage"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/pdf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:layout_constraintStart_toEndOf="@+id/ItemCard"
            android:id="@+id/BillCard"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="@dimen/image_view_widh"
            android:layout_height="@dimen/image_view_height"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="10dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/category_border"/>
            <ImageView
                android:padding="5dp"
                android:id="@+id/IBill"
                android:src="@drawable/pdf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>







</androidx.constraintlayout.widget.ConstraintLayout>