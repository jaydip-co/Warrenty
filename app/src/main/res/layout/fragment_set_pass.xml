<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SetPassFragment"
    android:background="@color/white">





    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="144dp"
            android:text="Generate Pin"

            android:textColor="@color/colorAccent"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_gravity="center_horizontal"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="14dp"
            android:text="@string/Inform_pin"

            android:textColor="@android:color/black"
            android:textSize="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="Enter pin"
            android:layout_marginRight="48dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center">
            <EditText
                android:id="@+id/pincode_edit"
                android:layout_height="match_parent"
                android:cursorVisible="false"
                android:elevation="0dp"
                android:layout_width="190dp"
                android:imeOptions="actionDone"
                android:inputType="numberPassword"
                android:maxLength="4"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="@+id/linearLayout" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:elevation="1dp"
                android:orientation="horizontal">

                <ImageView

                    android:id="@+id/pin1"
                    android:layout_width="@dimen/pincode_Box_width"
                    android:layout_height="@dimen/pincode_Box_height"
                    android:src="@drawable/pincode_back" />

                <ImageView
                    android:id="@+id/pin2"
                    android:layout_width="@dimen/pincode_Box_width"
                    android:layout_height="@dimen/pincode_Box_height"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/pincode_back" />

                <ImageView
                    android:id="@+id/pin3"
                    android:layout_width="@dimen/pincode_Box_width"
                    android:layout_height="@dimen/pincode_Box_height"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/pincode_back" />

                <ImageView
                    android:id="@+id/pin4"
                    android:layout_width="@dimen/pincode_Box_width"
                    android:layout_height="@dimen/pincode_Box_height"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/pincode_back" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:text="Enter pin again"
            android:layout_marginRight="48dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="4dp"

            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="start">

            <EditText
                android:id="@+id/pincode_edit_again"
                android:layout_height="match_parent"
                android:cursorVisible="false"
                android:elevation="0dp"
                android:layout_width="190dp"
                android:imeOptions="actionDone"
                android:inputType="numberPassword"
                android:maxLength="4"
                app:layout_constraintEnd_toEndOf="@+id/linearLayoutagain"
                app:layout_constraintStart_toStartOf="@+id/linearLayoutagain" />

            <LinearLayout
                android:id="@+id/linearLayoutagain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:elevation="1dp"
                android:orientation="horizontal">

                <ImageView

                    android:id="@+id/pin1again"
                    android:layout_width="@dimen/pincode_Box_width"
                    android:layout_height="@dimen/pincode_Box_height"
                    android:src="@drawable/pincode_back" />

                <ImageView
                    android:id="@+id/pin2again"
                    android:layout_width="@dimen/pincode_Box_width"
                    android:layout_height="@dimen/pincode_Box_height"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/pincode_back" />

                <ImageView
                    android:id="@+id/pin3again"
                    android:layout_width="@dimen/pincode_Box_width"
                    android:layout_height="@dimen/pincode_Box_height"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/pincode_back" />

                <ImageView
                    android:id="@+id/pin4again"
                    android:layout_width="@dimen/pincode_Box_width"
                    android:layout_height="@dimen/pincode_Box_height"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/pincode_back" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <Button
            android:id="@+id/save"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:elevation="1dp"
            android:text="Generate Pin"
            android:background="@drawable/button_selector"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:enabled="false"
            />
        <EditText
        android:visibility="gone"
            android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"


        android:layout_gravity="center"
        android:layout_marginTop="140dp"
        android:background="@drawable/round_intput"
        android:drawableLeft="@drawable/lock"

        android:hint="Enter Password"
        android:lines="1"
        android:padding="8dp"
        android:paddingLeft="15dp"
        />
        <TextView

            android:layout_gravity="center"
            android:visibility="gone"
            android:textColor="@color/error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <EditText
        android:visibility="gone"
        android:inputType="numberPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_intput"
        android:drawableLeft="@drawable/lock"
        android:paddingLeft="15dp"
        android:lines="1"
        android:padding="8dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="Enter again"
        />
        <TextView
            android:text="Doesnt't match"
            android:textColor="@color/error"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>